{{!< default}}

{{>page-header}}

<main>

  <article class="{{post_class}}">

    {{#post}}
                     {{#if feature_image}}
            <img src="{{img_url feature_image}}" alt="">
            {{else}}
             {{/if}}
      <header>
        <h1>{{title}}</h1>
        <section>
          <time datetime="{{date format='YYYY-MM-DD'}}">Published on {{date format="MMMM Do YYYY"}}</time>
        </section>
      </header>

      <section>
        {{content}}
      </section>

    {{/post}}
  </article>

</main>